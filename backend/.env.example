# LMS Core Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application settings
APP_NAME=LMS Core API
APP_VERSION=1.0.0
APP_ENV=development  # development, testing, staging, production
DEBUG=true  # Set to false in production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Server configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1  # Number of worker processes (use 1 for development)

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (Production)
DATABASE_URL=postgresql://postgres:password@db:5432/verdoy-db

# SQLite Database (Development/Testing)
# DATABASE_URL=sqlite:///./lms_core.db

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# TimescaleDB specific settings (for time-series data)
TIMESCALE_ENABLED=true
TIMESCALE_CHUNK_TIME_INTERVAL=1 day
TIMESCALE_COMPRESSION_ENABLED=true

# =============================================================================
# REDIS CONFIGURATION (Caching & Sessions)
# =============================================================================

# Redis connection
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Cache settings
CACHE_TTL=3600  # Default cache TTL in seconds
SESSION_TTL=1800  # Session TTL in seconds

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Email sender information
EMAIL_FROM=noreply@lms-core.com
EMAIL_FROM_NAME=LMS Core System

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log file settings
LOG_FILE=logs/lms_core.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Structured logging
STRUCTURED_LOGGING=true
LOG_FORMAT=json  # json, text

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Sentry error tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Health check settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Metrics collection
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# WebSocket settings
WEBSOCKET_ENABLED=true
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=10
WEBSOCKET_MAX_CONNECTIONS=1000

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# File upload settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=["jpg", "jpeg", "png", "pdf", "txt", "csv"]

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Third-party integrations (if needed)
# EXTERNAL_API_URL=
# EXTERNAL_API_KEY=

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Test database (for pytest)
TEST_DATABASE_URL=sqlite:///./test.db

# Development tools
RELOAD=true  # Auto-reload on code changes (development only)
PROFILING_ENABLED=false  # Enable profiling in development

# =============================================================================
# PRODUCTION SETTINGS (Override these in production)
# =============================================================================

# Production overrides (uncomment and set in production)
# DEBUG=false
# LOG_LEVEL=WARNING
# WORKERS=4
# RELOAD=false
# PROFILING_ENABLED=false

# =============================================================================
# SECURITY NOTES
# =============================================================================

# IMPORTANT: Change these values in production:
# - SECRET_KEY: Generate a strong, random key (min 32 characters)
# - DATABASE_URL: Use production database with proper credentials
# - SMTP_PASSWORD: Use app-specific passwords, not account passwords
# - CORS_ORIGINS: Restrict to your actual frontend domains
# - REDIS_PASSWORD: Set a strong Redis password
# - SENTRY_DSN: Configure Sentry for error tracking

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================

# Development environment
# Copy this section to .env.development for development-specific settings
# APP_ENV=development
# DEBUG=true
# LOG_LEVEL=DEBUG

# Testing environment
# Copy this section to .env.test for testing-specific settings
# APP_ENV=testing
# DEBUG=false
# LOG_LEVEL=INFO
# DATABASE_URL=sqlite:///./test.db

# Production environment
# Copy this section to .env.production for production-specific settings
# APP_ENV=production
# DEBUG=false
# LOG_LEVEL=WARNING
# WORKERS=4
